<view class="tabitem {{tab==1?'':hide}}">
  <view class='flowitemwarp'>
    <view class='flowwrap samepadding clearfix'>
      <block wx:for="{{siteInfo.tag}}" wx:key="tagkey" wx:for-item="itemTag">
        <view class="flow fl {{siteInfo.stageid >= itemTag.id?'on':''}} {{siteInfo.tag.length > 10?'flow12':''}}">
          <text class='number'>{{index+1}}</text>
          <text class='flowtext'>{{itemTag.name}}</text>
        </view>
      </block>
    </view>
  </view>
  <view class='detailitemul'>
    <view class='itemul bitermul samepadding' wx:for="{{data}}" wx:for-index="idx" wx:key="index">
      <view class='itemli clearfix'>
        <image src="{{item.faceimg?item.faceimg:'../../images/uhead.png'}}" class='uhead fl'></image>
        <view class='rightname fl'>
          <view class='topname'>
            <text class='uname'>{{item.nickname?item.nickname:'匿名'}}</text>
            <text class='ustate left10' wx:if="{{item.uposition}}">{{item.uposition}}</text>
          </view>
          <view class='bottomname' wx:if="{{item.type==0}}">
            <text class='proname'>{{item.title}}</text>
            <text class='prostate color4' wx:if="{{item.sitestagename}}">{{item.sitestagename}}</text>
          </view>
          <view class='statecontent'>
            <text class='detailstate'>{{item.content}}</text>
            <view class='stateimgwrap clearfix'>
              <block wx:for="{{item.video}}" wx:for-item="itemVodeo" wx:key="video_index">
                <image src='../../images/play.png' class="stateimg stateimgmore fl {{item.imgnumber < 2 ? '' : 'stateimgmore'}}" bindtap="videoInfo" data-item="{{item}}">
                </image>
              </block>
              <block wx:for="{{item.images}}" wx:for-item="itemImg" wx:key="img_index">
                <image src='{{imgUrl+itemImg.ossurl}}' class="stateimg {{item.imgnumber < 2 ? '' : 'stateimgmore'}} fl}}" mode="aspectFill" data-img="{{item.images}}" data-src="{{imgUrl+itemImg.ossurl}}" bindtap='getImg'>
                </image>
              </block>
            </view>
          </view>
          <view class='times clearfix'>
            <text class='fl'>{{item.created_at}}</text>
            <text class='fl'>评论:{{item.commentnum}}</text>
            <text class='fl'>点赞:{{item.thumbsupnum}}</text>
            <view class='handelwrap fr'>
              <image src='../../images/rightMsg.png' class='handelimage' data-id="{{idx}}" bindtap='showimage'>
              </image>
              <view class="iconwrap clearfix {{isshow==idx ?'': 'hide' }}">
                <image wx:if="{{item.give}}" src="../../images/zan1On.png" class='zan fl' data-item="{{item}}" data-fabuloustype="2" data-index='{{idx}}' bindtap="fabulous">
                </image>
                <image wx:else src="../../images/zan1.png" class='zan fl' data-item="{{item}}" data-fabuloustype="1" data-index='{{idx}}' bindtap="fabulous">
                </image>
                <image src="../../images/zan2.png" class='zan fl' data-item="{{item}}" data-index='{{idx}}' bindtap='showinput'>
                </image>
              </view>
            </view>
          </view>
          <view class='discusstext' wx:if="{{item.follo.length}}">
            <view class='textitem' wx:for="{{item.follo}}" wx:for-item="itemFollo" wx:key="fo">
              <text class='textcontent' catchtap='backtext' bindtouchstart='mytouchstart' bindtouchend='mytouchend' data-user="{{itemFollo.dynamic_comment_to_user}}" data-pindex='{{idx}}' data-index='{{index}}' data-dynamicid='{{itemFollo.dynamicid}}' data-id='{{itemFollo.id}}'
                data-name="{{item.title}}" data-createuserid='{{itemFollo.createuserid}}'>
                            <text class='textname' wx:if="{{itemFollo.dynamic_comment_to_reply_user}}">{{itemFollo.dynamic_comment_to_user.nickname?itemFollo.dynamic_comment_to_user.nickname:'匿名'}}<text style='color:#333'>回复</text>{{itemFollo.dynamic_comment_to_reply_user.nickname?itemFollo.dynamic_comment_to_reply_user.nickname:'匿名'}}:</text>

              <text class='textname' wx:else="{{itemFollo.dynamic_comment_to_user}}">{{itemFollo.dynamic_comment_to_user.nickname?itemFollo.dynamic_comment_to_user.nickname:'匿名'}}:</text>{{itemFollo.content}}
              </text>
            </view>
          </view>
        </view>
      </view>
      <!--B端添加编辑按钮-->
      <view class='bluecolor deleteitem' bindtap='handelmsg' data-id='{{item.id}}' data-pindex='{{idx}}' data-dtype='{{item.type}}'>编辑</view>
    </view>
  </view>
</view>