<!--pages/usercenter/project/visit.wxml-->
<view class='content'>
    <view class='banner'>
        <image class='bannerimg' src='{{imgUrl}}default/wx/canguan.jpg'></image>
    </view>
    <view class='formwrap samepadding'>
        <form bindsubmit='submitform' report-submit="submitform">
            <view class='formitem'>
                <input type='text' placeholder='姓名' name='uname' class='forminput' />
            </view>
            <view class='formitem'>
                <input type='number' placeholder='请输入手机号' name='uphone' class='forminput' />
            </view>
            <button class='submitBtn' form-type='submit'>预约参观</button>
        </form>
    </view>
</view>
