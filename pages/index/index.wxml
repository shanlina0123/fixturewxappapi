<!--index.wxml-->
<view class='wrap'>
    <text class='companyname'>熊先生</text>
    <view class='buttonwrap'>
        <view class='samepadding'>
            <navigator class='centerbtn' url="free/free" hover-class="none">
                <image src='../../images/topicon1.png' class='topicon'></image>
                免费量房
            </navigator>
            <navigator class='centerbtn' url="quick/quick" hover-class="none">
            <image src='../../images/topicon2.png' class='topicon'></image>
                快速报价
                </navigator>
            <navigator class='centerbtn' url="../usercenter/project/project"hover-class="none">
                <image src='../../images/topicon3.png' class='topicon'></image>
                关注项目
            </navigator>
        </view>
    </view>
    <text class='centertitle'>动态</text>
    <view class='itemul samepadding' wx:for="{{data}}" wx:for-index="idx" wx:key="index">
        <view class='itemli clearfix'>
            <image src="{{item.faceimg?item.faceimg:'../../images/uhead.png'}}" class='uhead fl'></image>
            <view class='rightname fl'>
                <view class='topname'>
                    <text class='uname'>{{item.nickname?item.nickname:'匿名'}}</text>
                    <text class='ustate left10' vx:if="{{item.uposition}}">{{item.uposition}}</text>
                </view>
                <view class='bottomname' wx:if="{{item.type==0}}">
                    <text class='proname'>{{item.title}}</text>
                    <text class='prostate color4'>水电</text>
                </view>
            </view>
        </view>
        <navigator url="../usercenter/project/projectdetail" class='itemli statecontent' hover-class="none">
            <text class='statetext'>{{item.content}}</text>
            <view class='stateimgwrap clearfix'>
                <block wx:for="{{item.images}}" wx:for-item="itemImg" wx:key="img_index">
                <image src='{{itemImg.ossurl}}' class='stateimg fl'></image>
                </block>
            </view>
        </navigator>
        <view class='itemli times clearfix'>
            <text class='fl'>{{item.created_at}}</text>
            <text class='fl'>评论:{{item.commentnum}}</text>
            <text class='fl'>点赞:{{item.thumbsupnum}}</text>
            <view class='handelwrap fr'>
                <image src='../../images/rightMsg.png' class='handelimage' bindtap='showimage'></image>
                <view class="iconwrap clearfix {{isshow ?'': 'hide' }}">
                    <image src="../../images/zan1.png" class='zan fl' data-id="{{item.id}}" data-sitetid="{{item.sitetid}}" data-index='{{index}}' bindtap="fabulous"></image>
                    <image src="../../images/zan2.png" class='zan fl' data-id="{{item.id}}" data-sitetid="{{item.sitetid}}" data-index='{{index}}' bindtap='showinput'></image>
                </view>
            </view>
        </view>
        <view class='itemli discusstext' wx:if="{{item.follo.length}}">
            <view class='textitem' wx:for="{{item.follo}}" wx:for-item="itemFollo" wx:key="fo" >
                <text class='textcontent' catchtap='backtext' bindtouchstart='mytouchstart' bindtouchend='mytouchend' data-pindex='{{idx}}' data-index='{{index}}' data-dynamicid='{{itemFollo.dynamicid}}' data-id='{{itemFollo.id}}'>
                  <text class='textname' wx:if="{{itemFollo.dynamic_comment_to_user}}">{{itemFollo.dynamic_comment_to_user.nickname?itemFollo.dynamic_comment_to_user.nickname:'匿名'}}：</text>{{itemFollo.content}}
                </text>
            </view>
        </view>
    </view>
    <view class="inputwarp clearfix {{inputisshow ? '' :'hide'}}">
        <input class='zaninput fl' type='text' placeholder='评论' data-content='{{commentData}}' cursor-spacing="8" bindinput="setContent" bindconfirm='addComment'></input>
        <text class='send left10 fl' data-content='{{commentData}}' bindtap='addComment'>发送</text>
    </view>
</view>