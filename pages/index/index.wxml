                <image src='../../images/rightMsg.png' class='handelimage'></image>
            </view>
        </view>
    </view>
    <view class="inputwarp clearfix {{inputisshow ? '' :'hide'}}">
        <input class='zaninput fl' type='text' placeholder='评论' cursor-spacing="8" bindconfirm='bindconfirm'></input>
        <text class='send left10 fl' bindtap='closeinput'>发送</text>
